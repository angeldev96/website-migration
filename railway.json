{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "prisma generate && next build",
    "watchPatterns": [
      "**"
    ]
  },
  "deploy": {
    "startCommand": "next start",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE"
  }
}
