{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "prisma generate && next build",
    "watchPatterns": [
      "**"
    ]
  },
  "deploy": {
    "startCommand": "next start",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "builds": [
    {
      "name": "railway",
      "buildType": "nixpacks",
      "nixpacksPlan": {
        "providers": ["nodejs"],
        "buildDev": ["prisma generate && next build"]
      }
    }
  ]
}
